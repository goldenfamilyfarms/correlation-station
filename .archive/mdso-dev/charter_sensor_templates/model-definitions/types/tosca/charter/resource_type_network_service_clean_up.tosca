"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Network Service Cleaner"
package     = charter
version     = "1.0"
description = """
This document defines a function that will clean up the un-used resources that can be 
deleted from the orchestrator after the NS is enabled.
"""
authors     = [ "Matt Becker (mbecker@ciena.com)" ]

imports {

}

resourceTypes { 
    NetworkServiceCleaner {
        derivedFrom = tosca.resourceTypes.Root
        title = Network Service Cleaner
        description = """
       
        """

        properties {

            resource_id {
                title = "Resource ID"
                description = "Resource ID"
                type = string
                updatable = false
                optional = false 
            }
            
            resource_name {
                title = "Resource Name"
                description = "Resource Name"
                type = string
                optional = true
                updatable = false
            }

        }
    }
}

serviceTemplates {

    NetworkServiceCleaner {
        title = Network Service Cleaner
        description = "Update Observed Properties"
        implements = charter.resourceTypes.NetworkServiceCleaner
        
        plans {

            activate {
                type = remote
                language = python
                path = "scripts.networkservice.networkservicecleaner.Activate"
            }
            
            terminate {
                type = remote
                language = python
                path = "scripts.networkservice.networkservicecleaner.Terminate"
            }
            
        }
        
    }
}