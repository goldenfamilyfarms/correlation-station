"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "SLM Config Variables"
package     = charter
version     = "1.0"
description = """
This document defines SLM Config Variables. This is the top level service
construct that will be used for communicating with north-bound OSS, WebPortals,
etc...
"""
authors     = [ "Allison Patino (allison.patino@charter.com)", "Paul Kim (paul.kim@charter.com)" ]

imports {

}

resourceTypes {
    slmConfigVariables {
        derivedFrom = charter.resourceTypes.BaseResource
        title = SLM Config Variables
        description = """
        - Extended from charter.resourceTypes.BaseResource
        - The main entry point for Charter's systems for creating a SLM Config Variables resource.
        - This Resource Definition only requires the Charter Circuit ID 
        - For service types like ELINE, ELAN, etc. eligible for SLM configurations
        """

        properties {
            circuit_id {
                title = "Circuit ID"
                description = "Circuit ID"
                type = string
                optional = false
                updatable = false
            }
            slm_configuration_variables {
                title = "Variables needed to configure SLM"
                description = "next available SLM configuration variables on probe and reflector devices"
                type = object
                optional = true
                updatable = true
                items.type = object
            }
            circuit_details_id {
                title = "circuit details id"
                description = "circuit details id"
                type = string
                optional = true
            }
            origin_cid {
                title = "origin cid"
                description = "origin cid"
                type = string
                optional = true
                updatable = false
            }
            origin_cd_id {
                title = "origin cd id"
                description = "origin circuit details id"
                type = string
                optional = true
            }
            core_only {
                title = "core only"
                description = "core only flag"
                type = boolean
                optional = true
            }
            onboarding_complete {
                title = "onboarding complete"
                description = onboarding processes already completed for all devices within topology
                type = boolean
                optional = true
            }
        }
    }
}

serviceTemplates {
    slmConfigVariables {
        title = SLM Config Variables
        description = SLM Config Variables
        implements = charter.resourceTypes.slmConfigVariables

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.slm.slmConfigVariables.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.slm.slmConfigVariables.Terminate"
            }
        }
    }
}
