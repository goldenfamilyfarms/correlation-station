"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Network Service"
package     = charter
version     = "1.0"
description = """
This document defines the Network Service State Toggle Resource Type. This would be
invoked by the Network Service Update Resource to either enable or disable the Network
Service.
"""
authors     = [ "Sahil Sidhar (ssidhar@ciena.com)" ]

imports {

}

resourceTypes { 
    NetworkServiceStateToggle {
        derivedFrom = [ tosca.resourceTypes.NetworkService, charter.resourceTypes.BaseResource ]
        title = Network Service State Toggle
        description = """
        - Resource Type to toggle State of a Network Service. 
        """

        properties {
            circuit_details_resource_id {
                type = string
                title = Circuit Details Resource Id
                description = Circuit Details Resource Id
            }
            required_state {
                type = string
                title = Network Service State
                description = Network Service State
                enum = [ 
                    "enable",
                    "disable"
                ]
            }
        }
    }
}

serviceTemplates {

    NetworkServiceStateToggle {
        title = Network Service State Toggle
        description = "Network Service State Toggle"
        implements = charter.resourceTypes.NetworkServiceStateToggle

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.networkserviceupdate.state_toggle.Activate"
            }

        }
    }
}