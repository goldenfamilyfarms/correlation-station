"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "ene_activator"
package     = charter
version     = "1.0"
description = """
This document defines a resource that can be used to share configuration properties
across multiple STs.  There will only ever be one of these available that is active
in the system.
"""
authors = [ "Hunter Bertles (hunter.bertles@charter.com)", "George Strauch (george.strauch@charter.com)" ]

imports {

}

resourceTypes {
    ENE {
        title = Enterprise Network Edge
        description = Claim Fortinet devices for ENE
        derivedFrom = tosca.resourceTypes.Root
        properties {
            configurations {
                title = "Configuration"
                description = "Payload that includes serial numbers and customer information from ESET Design Portal"
                type = object
                optional = false
            }
        }
    }
}

serviceTemplates {
    ENE {
        title = "ENE"
        description = "ENE Activator"
        implements = charter.resourceTypes.ENE
        plans {
            activate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.ene.ene_activator.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.ene.ene_activator.Terminate"
            }
        }
    }
}
