"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Profile Configurator"
package     = charter
version     = "1.0"
description = "This document defines the profile configuration"
authors     = [ "Yeshaswini Narayana (ynarayan@partner.ciena.com)" ]

imports {
  Container = tosca.capabilityTypes.Container
}


resourceTypes {
    ProfileConfigurator {
        derivedFrom = tosca.resourceTypes.Root
        title = Profile Configurator
        description = """
        - Extended from charter.resourceTypes.BaseResource
        -
        """

        properties {

            device_id {
                title = "Device ID"
                description = "Device ID"
                type = string
            }

            nc_id {
                title = "Network Construct ID"
                description = "Network Construct ID"
                type = string
            }
            
            service_level {
                title = "Service Level"
                description = "Gold, Silver, Bronze"
                type = string
                optional = true
            }
            
            service_type {
                title = "Service Type"
                description = "FIA or ELINE"
                type = string
                optional = true
            }
            
            port_role {
                title = "Port Role"
                description = "EP-UNI, EVP-UNI, INNI, UNI, ENNI"
                type = string
                optional = true
            }
            
            bandwidth {
                title = "Bandwidth"
                description = "Bandwidth"
                type = string
                optional = true
            }

        }

        requirements {

        }

        capabilities {

        }

    }
}

