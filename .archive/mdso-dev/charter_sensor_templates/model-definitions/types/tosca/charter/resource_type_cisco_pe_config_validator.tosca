"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "CISCO PE CONFIG VALIDATOR FOR NEW CPE/MTU"
package     = charter
version     = "1.0"
description = "This document defines the CISCO PE Config Validator for new CPE/MTU"
authors     = [ "Yeshaswini Narayana (ynarayan@partner.ciena.com)" ]

imports {
  Container = tosca.capabilityTypes.Container
}


resourceTypes {
    CiscoPeConfigValidator {
        derivedFrom = tosca.resourceTypes.Root
        title = CISCO Pe Config Validator
        description = """
        - Extended from charter.resourceTypes.BaseResource
        -
        """

        properties {

            node_id {
                title = "Node ID"
                description = "Node ID"
                type = string
            }

            pe_port {
                title = "PE Port Name"
                description = "Name of PE Port"
                type = string
            }

            description {
                title = "Client Interface Description"
                description = "Client Interface Description"
                type = string
                optional = true
            }

            client_neighbour_ip {
                title = "Client Neighbour Ip"
                description = "CPE or MTU IP"
                type = string
                optional = true
            }

        }

        requirements {

        }

        capabilities {

        }

    }
}

