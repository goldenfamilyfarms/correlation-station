"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "RPHYAcceptance"
package     = charter
version     = "1.2"
description = """
Establishing properties that are used to confirm the channel status
"""
authors     = [ "Paul Kim (Paul.kim@charter.com)"]

imports {

}

resourceTypes {
    RPHYAcceptance {
        derivedFrom = tosca.resourceTypes.Root
        title = RPHYAcceptance
        description = """
         - This is a test
         """

        properties {
            cid {
                type = string
                title = "CID"
                description = "CID"
                optional = false
            }
            rpd {
                type = string
                title = "rpd"
                description = "rpd"
                optional = false
            }
            channel_numbers {
                type = array
                title = "channel_numbers"
                description = "List of Channels customer ordered"
                optional = false
            }
            cmtsipAddress {
                type = string
                title = "Device"
                description = "CMTS IP"
                optional = false
            }
            CPE {
                type = object
                title = "CPE info"
                description = "CPE Information"
                optional = false
            }
            service_groups {
                type = array
                title = "service_groups"
                description = "List of Service groups customer ordered"
                optional = false
            }
            rphy_acceptance_status {
	            config = false
                title = "RPHY Acceptance Status"
                description = "RPHY Acceptance Status"
                type = string
    	        optional = true
            }
            report {
                config = false
                title = "RPHY Acceptance Errors"
                description = "Acceptance Errors found"
                type = array
                optional = true
            }
        }
    }
}
serviceTemplates {

   RPHYAcceptance {
        title = RPHYAcceptance
        description = "RPHYAcceptance"
        implements = charter.resourceTypes.RPHYAcceptance

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.RPHYAcceptance.Activate"
            }

        }
    }
}
