"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Managed Services FortiManager"
package     = charter
version     = "1.0"
description = """
This document defines ADOM creation in FortiManager.
"""
authors     = []

imports {

}

resourceTypes {
    managedSecurityServices {
        derivedFrom = tosca.resourceTypes.Root
        title = Managed Security Services
        description = """
        - This document defines ADOM creation in FortiManager.
        """

        properties {
            customerResourceId {
                title = "customer resource ID"
                description = "passed down id of created customer"
                type = string
            }
    }
}
}
serviceTemplates {
    managedSecurityServices {
        title = Managed Security Services
        description = "Managed Security Services"
        implements = charter.resourceTypes.managedSecurityServices

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.managedSecurityServices.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.managedSecurityServices.Terminate"
            }
        }
    }
}
