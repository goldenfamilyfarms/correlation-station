"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "ELAN ENDPOINT"
package     = charter
version     = "1.0"
description = "This document defines the ELan Endpoint"
authors     = [ "Yeshaswini Narayana (ynarayan@partner.ciena.com)" ]

imports {
  Container = tosca.capabilityTypes.Container
}

resourceTypes {
    ElanEndpoint {
        derivedFrom = tosca.resourceTypes.Root
        title = ELAN ENDPOINT
        description = """
        - Extended from charter.resourceTypes.BaseResource
        -
        """

        properties {

            operation {
                type = string
                title = "Operation"
                description = "operation to be performed"
                optional = true
                default = "ACTIVATE"
            }

            update_property {
                title = "Update Property"
                description = "Properties to be updated, only when the operation is UPDATE"
                type = string
                optional = true
                enum = [
                    "bandwidth",
                    "description",
                    "state_toggle",
                    "ip"
                ]
            }

            pe_device_rid {
                title = "PE Device ID"
                description = "PE Device ID"
                type = string
                optional = true
            }

            network_construct_id {
                title = "Network Construct Id"
                description = "Network Construct Id"
                type = string
                optional = true
            }

            port_name {
                title = "Port Name"
                description = "Port Name"
                type = string
                optional = true
            }

            port_id {
                title = "Port ID"
                description = "Port ID"
                type = string
                optional = true
            }

            interface_userLabel {
                title = "Interface UserLabel"
                description = "Interface UserLabel"
                type = string
                optional = true
            }

            cos {
                title = "Cos"
                description = "Cos"
                type = string
                optional = true
            }

            vrf_id {
                title = "VRF ID"
                description = "VRF iD"
                type = string
                optional = true
            }

            vlan {
                title = "Vlan"
                description = "VLan"
                type = string
                optional = true
            }

            userLabel {
                title = "User Label"
                description = "User Label"
                type = string
                optional = true
            }

            group_name {
                title = "Group Name"
                description = "Group Name"
                type = string
                optional = true
            }

            evcId {
                title = "evcId"
                description = "evcId"
                type = string
                optional = true
            }

            vplsVlanId {
                title = "vplsVlanId"
                description = "vplsVlanId"
                type = string
                optional = true
            }

            vplsNetworkId {
                title = "vplsNetworkId"
                description = "vplsNetworkId"
                type = string
                optional = true
            }

            apply_group {
                type = string
                title = "Apply Group to be used on physical port"
                description = "Apply Group to be used on physical port"
                optional = true
            }

            in_bwProfileFlowParameters {
                type = string
                title = "Ingress Bandwidth Profile Flow Parameters"
                description = "Bandwidth in Mbps"
                optional = true
            }
            e_bwProfileFlowParameters {
                type = string
                title = "Egress Bandwidth Profile Flow Parameters"
                description = "Bandwidth in Mbps"
                optional = true
            }

        }

        requirements {

        }

        capabilities {

        }

    }
}
