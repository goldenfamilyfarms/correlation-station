"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Managed RPHY"
package     = charter
version     = "1.0"
description = """
This document defines the Service Mapper. This is the top level service
construct that will be used for communicating with north-bound OSS, WebPortals,
etc...
"""
authors     = []

imports {

}

resourceTypes {
    RPHYFWupgrade {
        derivedFrom = tosca.resourceTypes.Root
        title = Managed RPHYFWupgrade
        description = """
        - Resource activator fpr RPHYFWupgrade
        - Will check firmware against given RPD and approved FW and upgrade if needed.
        """
        properties {
            rpd {
                title = "rpd"
                type = string
                optional = false
            },
            vendor {
                title = "device vendor"
                type = string
                optional = false
            },
            cid {
                title = "cid"
                description = ""
                type = string
                optional = false
            },
            cmtsipAddress {
                title = "cmts ip address"
                description = ""
                type = string
                optional = false
            },
            operationType {
                title = "Service Option"
                description = "New or Update Configuration"
                type = string
                optional = true
                default = "New"
                enum = [
                    "New",
                    "Update"
                ]
            },
            rphy_fw_upgrade {
	            config = false
                title = "RPHY FW Upgrade Status"
                description = "Progress of FW Upgrade"
                type = string
    	        optional = true
            }
        }
    }
}

serviceTemplates {
    RPHYFWupgrade {
        title = RPHYFWupgrade
        description = "RPHYFWupgrade"
        implements = charter.resourceTypes.RPHYFWupgrade

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.RPHYFWupgrade.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.RPHYFWupgrade.Terminate"
            }
        }
    }
}
