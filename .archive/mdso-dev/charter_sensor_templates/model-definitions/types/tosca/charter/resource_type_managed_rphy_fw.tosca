"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Managed Services rphy_fw"
package     = charter
version     = "1.0"
description = """
This document defines a set of properties to be stored in the resource.
"""
authors     = []

imports {

}

resourceTypes {
    rphy_fw {
        derivedFrom = tosca.resourceTypes.Root
        title = rphy_fw
        description = """
        - This document defines a set of properties to be stored in the resource.
        """

        properties {
            firmware{
                type = object
                description = "firmware for harmonic and vecima"
                optional = false
                updatable = true
                properties {
                    vecima{
                    type = string
                    description = "Vecima current firmware version"
                    optional = false
                    default = "ENTRA_RPD_REL_5803_2_1_0.bin.signed"
                    },
                    harmonic{
                    type = string
                    description = "Harmonic current firmware version"
                    optional = false
                    default = "ExoR-release-1.34.5.0-1.iso.codefile"
                    }
                }
            }            
        }
    }
},
serviceTemplates {
    rphy_fw {
        title = rphy_fw
        description = stores firmware version for RPHY
        implements = charter.resourceTypes.rphy_fw

        plans {
            activate {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
            }
        }
    }
}
