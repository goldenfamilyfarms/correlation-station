"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "CPE Activator Credentials"
package     = charter
version     = "1.0"
description = """

etc...
"""
authors     = [ "Paul Kim (paul.kim@charter.com)" ]

imports {
    root = tosca.resourceTypes.Root
}

resourceTypes { 
    CPEACreds {
        derivedFrom = [ root ]
        title = CPE Activation Credentials
        description = """
        This will contain all credentials (SNMP strings, default creds, etc) to be used by CPE Activator resource
        """

        properties {
        
            SNMPstring {
                title = "SNMP_string"
                description = "SNMP String"
                type = string
                optional = false
                obfuscate = true
                updatable = true
            }
            
            credentials {
                title = "Default Logins"
                description = "Default Logins"
                type = object
                properties {                    
                    comm_engineer_password {
                        title = "comm_engineer_password"
                        description = "comm_engineer_password"
                        type = string
                        optional = false
                        obfuscate = true
                        updatable = true
                    }
                    comm_support_password {
                        title = "comm_support_password"
                        description = "comm_support_password"
                        type = string
                        optional = false
                        obfuscate = true
                        updatable = true
                    }
                    NOC_password {
                        title = "NOC_password"
                        description = "NOC_password"
                        type = string
                        optional = false
                        obfuscate = true
                        updatable = true
                    }           
                    ACS_secret {
                        title = "ACS_secret"
                        description = "ACS_secret"
                        type = string
                        optional = false
                        obfuscate = true
                        updatable = true
                    }                   
                }
            }

        }
    }
}

serviceTemplates {
  CPEACreds {
    title = "CPEA Creds Template"
    description = "Default implementation"
    implements = charter.resourceTypes.CPEACreds
        plans {
            activate {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
                }
            
            update {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
                }
        }
    }
}
