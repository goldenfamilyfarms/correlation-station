"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"  # format version and validator
title       = "RA Cutthrough Test"
package     = charter
version     = "1.0"
description = """
    Resource to test the RA Cutthrough behavior
"""
authors     = [ "Matt Becker (mbecker@ciena.com)" ]


imports {
}

resourceTypes {
    RaCutthroughTest {
        derivedFrom = tosca.resourceTypes.Root
        title = "RA Cut-through Test"
        description = """
        This resource will take a file name and import
        """

        properties {
        
            session_id {
                title = "Session ID"
                description = "Session ID"
                type = string
                optional = true
                updatable = true
            }
            device {
                title = "Device"
                description = "Device"
                type = string
                optional = true
                updatable = true
            }
            provider_resource_id {
                title = "Provider Resource ID"
                description = "Provider Resource ID"
                type = string
                optional = true
                updatable = true
            }
            resource_type {
                title = "Resource Type"
                description = "Resource Type"
                type = string
                optional = true
                updatable = true
            }
        }
    }
}

serviceTemplates {
    RaCutthroughTest {
        title = "RA Cut-through Test"
        description = "RA Cut-through Test"
        implements = charter.resourceTypes.RaCutthroughTest

        plans {
            activate {
                type = remote
                language = python
                path = "scripts.racutthrough.ra_cutthrough.Test"
            }
        }
    }
}
