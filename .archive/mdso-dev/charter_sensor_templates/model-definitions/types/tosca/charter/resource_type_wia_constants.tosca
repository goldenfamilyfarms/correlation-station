"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "WIA Constants"
package     = charter
version     = "1.0"
description = """
This documents the WIA Constants and. These can change on version/firmware upgrades and
are expected to become unruly in size, so this document is intended to be a living document.
"""
authors     = [ "Robert Saunders (robert.j.saunders@charter.com)"]

imports {

}

resourceTypes { 
    WIAConstants {
        derivedFrom = tosca.resourceTypes.Root
        title = WIA Constants
        description = """
         - This document holds the following data
         - Service Codes and descriptions
         - API Keys for Cradlepoint
         - Sentinel Auth Creds
         """

        properties {
            
            active_service_codes {
                title = "Active Service Codes"
                description = "Service Codes that are currently active"
                type = object
                optional = false
                updatable = true
            }

            legacy_service_codes {
                title = "Legacy Service Codes"
                description = "Service Codes that are no longer active but may still be in use"
                type = object
                optional = false
                updatable = true
            }

            unsupported_service_codes {
                title = "Unsupported Service Codes"
                description = "Service Codes that are not supported by WIA Automation Efforts"
                type = object
                optional = false
                updatable = true
            }
            
            supported_device_service_codes {
                title = "Supported Service Codes"
                description = "Service Codes that are supported by WIA Automation Efforts"
                type = object
                optional = false
                updatable = true
            }

            cradlepoint_api_keys {
                title = "Cradlepoint API Keys"
                description = "API Keys"
                type = object
                optional = false
                updatable = true
                properties {
                    ecm_api_id {
                        title = "ECM API ID"
                        description = "ECM API ID"
                        type = string
                        optional = false
                        updatable = true
                    }
                    ecm_api_key {
                        title = "ECM API Key"
                        description = "ECM API Key"
                        type = string
                        optional = false
                        updatable = true
                        obfuscate = true
                    }
                    cp_api_id {
                        title = "CP API ID"
                        description = "CP API ID"
                        type = string
                        optional = false
                        updatable = true
                    }
                    cp_api_key {
                        title = "CP API Key"
                        description = "CP API Key"
                        type = string
                        optional = false
                        updatable = true
                        obfuscate = true
                    }
                }
            }
        
            sentinel_auth {
                title = "Sentinel Auth"
                description = "Sentinel Auth"
                type = object
                optional = false
                updatable = true
                properties {
                    username {
                        title = "Username"
                        description = "Username"
                        type = string
                        optional = false
                        updatable = true
                    }
                    password {
                        title = "Password"
                        description = "Password"
                        type = string
                        optional = false
                        updatable = true
                        obfuscate = true
                    }
                }
            }
        }

        requirements {
    
        }
    
        capabilities {
    
        }

    }
}

serviceTemplates {

    WIAConstants {
        title = WIA Constants
        description = "WIA Constants"
        implements = charter.resourceTypes.WIAConstants
        
        plans {

            activate {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
            }
            
            update {
                type = remote
                language = python
                path = "scripts.common_plan.SingletonActivate"
            }

        }
    }
}
