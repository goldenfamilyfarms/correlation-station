"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Network Service"
package     = charter
version     = "1.0"
description = """
This document defines the Network Service Delete model.
"""
authors     = [ "Yeshaswini Narayana (ynarayan@partner.ciena.com)" ]

imports {

}

resourceTypes { 
    NetworkServiceDelete {
        derivedFrom = [ tosca.resourceTypes.NetworkService, charter.resourceTypes.BaseResource ]
        title = Network Service Delete
        description = """
        - Extended from charter.resourceTypes.BaseResource  
        - The main entry point for Charter's systems (SENSE-CLI or Web Interface to call) for Delete
          commands for a service (or service inventory)
        - This Resource Definition only requires the Charter Circuit ID to remove (DELETE)
        - Contains overall state of the network service. 
        - For service types like ELINE, ELAN, ETREE, etc. 
        - Contains state and other information about each site in the network service. 
        - Provides custom operations such as activateSite, suspend, resume. 
        """

        properties {
            circuit_id {
                title = "Circuit ID"
                description = "Circuit ID from the Granite system"
                type = string
                optional = false
                updatable = false
            }
            
        }
    }
}

serviceTemplates {

    NetworkServiceDelete {
        title = Network Service Delete
        description = "Network Service Delete"
        implements = charter.resourceTypes.NetworkServiceDelete

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.networkservicedelete.networkservicedelete.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.networkservicedelete.networkservicedelete.Terminate"
            }

        }
    }
}
