"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "CPE CONFIG VALIDATOR PLUGIN"
package     = charter
version     = "1.0"
description = "This document defines the  CPE Config Validator plugin"
authors     = [ "Sahil Sidhar (ssidhar@ciena.com)" ]

imports {
  Container = tosca.capabilityTypes.Container
}


resourceTypes {
    CpeConfigValidator {
        derivedFrom = tosca.resourceTypes.Root
        title = Cpe Config Validator
        description = """
        - Extended from charter.resourceTypes.BaseResource
        -
        """

        properties {

            node_id {
                title = "Node ID"
                description = "Node ID"
                type = string
            }

            pe_port_res_id {
                title = "PE Port res id"
                description = "Name of res id"
                type = string
            }

            port_role {
                title = "Port Role"
                description = "Port Role"
                type = string
                optional = true
            }

            required_service_type {
                title = "Required Service type"
                description = "Required Service Type"
                type = string
                optional = true
            }
            
            resource_name {
                title = "Resource Name"
                description = "Resource Name"
                type = string
                optional = true
                updatable = false
            }

        }

        requirements {

        }

        capabilities {

        }

    }
}

