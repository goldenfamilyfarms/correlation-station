"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "Managed Router Services Activator"
package     = charter
version     = "1.0"
description = """
This document defines the Service Mapper. This is the top level service
construct that will be used for communicating with north-bound OSS, WebPortals,
etc...
"""
authors     = []

imports {

}

resourceTypes {
    ManagedRouterServicesActivator {
        derivedFrom = tosca.resourceTypes.Root
        title = Managed Router Services Activator
        description = """
        - Extended from charter.resourceTypes.BaseResource
        - Dedicated service activator for MRS
        """
        properties {
            fqdn {
                title = "fqdn"
                description = "domain of the device"
                type = string
                optional = false
            },
            ipAddress {
                title = "ip address"
                description = "ip address of the device"
                type = string
                optional = false
            },
            firmwareVersion {
                title = "firmware version"
                description = "approved firmware version"
                type = string
                optional = true
            },
            configuration {
                title = "configuration"
                description = "full configuration for the device"
                type = array
                optional = false
            },
            vendor {
                title = "vendor"
                description = "vendor"
                type = string
                optional = false
            },
            model {
                title = "model"
                description = "model"
                type = string
                optional = false
            },
            operationType {
                title = "Service Option"
                description = "New or Update Configuration"
                type = string
                optional = false
                default = "New"
                enum = [
                    "New",
                    "Update"
                ]
            },
            ignore_errors {
                title = "ignore errors"
                description = "run through all commands even if one errors in the middle."
                type = boolean
                default = false
                optional = true
            },
            additionalAttributes {
                title = "Additional Attributes"
                description = "Additional Attributes"
                propertyType = tosca.propertyTypes.AdditionalAttributes
                optional = true
            },
            mrs_activation {
	            config = false
                title = "Managed Router Services Activation Status"
                description = "Progress of Activation"
                type = string
    	        optional = true
		    },
            mrs_activation_error {
	            config = false
                title = "Managed Router Services Activation Error Status"
                description = "Error status of Activation"
                type = string
    	        optional = true
	    	}
        }
    }
}

serviceTemplates {
    ManagedRouterServicesActivator {
        title = Managed Router Services Activator
        description = "Managed Router Services Activator"
        implements = charter.resourceTypes.ManagedRouterServicesActivator

        plans {

            activate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.managedRouterServicesActivator.Activate"
            }
            terminate {
                type = remote
                language = python
                path = "scripts.managedServicesActivator.managedRouterServicesActivator.Terminate"
            }
        }
    }
}
