[flake8]
exclude =
    # Ignore git dir
    .git,
    # Ignore pyc files
    *.pyc,
    # ignore cache dirs
    __pycache__,
    # ignore requirements files
    requirements,
    # ignore venv directories
    bin,
    lib,
    include,

# line length is too conservative at 80 chars
max_line_length = 119

ignore = 
    # line length
    E501,
    # comparison to None should be 'if cond is None' - ignored for assert stmnts in tests
    E711,
    # comparison to True should be 'if cond is True' - ignored for assert stmnts in tests
    E712,
    # line break before binary operator. over 15 issues
    W503,
    # sequence 
    W605,
    E402,
    # Import not at top of file 
    LN001

# Print total number of errors
count = True

# Show statistics - number of each error/warning
statistics = True

# Print the source code that generates the error/warning in question
show_source = True

