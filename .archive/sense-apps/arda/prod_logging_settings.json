{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "SENSE_USVC, %(asctime)s - %(levelname)8s - %(name)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "file_handler": {
            "class" : "logging.handlers.RotatingFileHandler",
            "maxBytes": 1000000,
            "backupCount": 10,
            "formatter": "simple",
            "filename": "logs/log.log",
            "level": "DEBUG"
        },

        "syslog_handler": {
		    "class" : "logging.handlers.SysLogHandler",
            "address": "/dev/log",
            "facility": "syslog",
            "formatter": "simple",
            "level": "DEBUG"
        },

        "remote_syslog_handler": {
		    "class" : "logging.handlers.SysLogHandler",
            "address": ["198.24.118.140", 514],
            "facility": "syslog",
            "formatter": "simple",
            "level": "DEBUG"
		}

    },

    "loggers": {
            "arda": {
            "level": "DEBUG",
            "handlers": ["console"],
            "propagate": "no"
        },
            "flake8": {
                "level": "WARNING",
                "handlers": ["console"],
                "propagate": "no"
            }
    },

    "root": {
        "level": "DEBUG",
        "handlers": ["file_handler", "console", "syslog_handler", "remote_syslog_handler"]
    }
}
