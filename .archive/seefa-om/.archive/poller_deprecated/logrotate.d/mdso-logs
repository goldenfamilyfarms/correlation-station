/var/log/mdso/*.ndjson {
    daily
    rotate 7
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    sharedscripts
    postrotate
        systemctl reload mdso-poller > /dev/null 2>&1 || true
    endscript
}

/var/log/mdso-poller.log {
    weekly
    rotate 4
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
}