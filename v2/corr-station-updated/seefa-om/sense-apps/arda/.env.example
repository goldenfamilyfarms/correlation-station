# ============================================================================
# Arda Service - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in the actual values
# Note: Never commit .env files with real credentials to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
LOGGING_LEVEL=DEBUG
LOGGING_SETTINGS=debug_logging_settings.json
MS_NAME=ARDA
SENTRY_DNS=  # Optional: Sentry error tracking DSN
USAGE_DESIGNATION=STAGE  # Options: STAGE, PRODUCTION

# ----------------------------------------------------------------------------
# Authentication Credentials
# ----------------------------------------------------------------------------
# Note: Each credential has a corresponding _SKELLY encryption key
# The application uses Fernet encryption to decrypt these values

# Arin
ARIN_API_KEY=<encrypted-value>
ARIN_API_KEY_SKELLY=<fernet-key>

# Hydra - Arda-specific keys
ARDA_ADVA_RAD_HYDRA_KEY=<encrypted-value>
ARDA_ADVA_RAD_HYDRA_KEY_SKELLY=<fernet-key>
ARDA_HYDRA_KEY=<encrypted-value>
ARDA_HYDRA_KEY_SKELLY=<fernet-key>
ARDA_NOC_HYDRA_KEY=<encrypted-value>
ARDA_NOC_HYDRA_KEY_SKELLY=<fernet-key>
ARDA_HYDRA_STAGIUS_KEY=<encrypted-value>
ARDA_HYDRA_STAGIUS_KEY_SKELLY=<fernet-key>

# IP Control
IPC_USER=<username>
IPC_PASS=<encrypted-value>
IPC_PASS_SKELLY=<fernet-key>

# MDSO (MetaData Service Orchestrator)
MDSO_USER=<username>
MDSO_PASS=<encrypted-value>
MDSO_PASS_SKELLY=<fernet-key>
# Production MDSO credentials (Arda uses MDSO prod for both dev and prod)
MDSO_USER_PROD=<username>
MDSO_PASS_PROD=<encrypted-value>
MDSO_PASS_PROD_SKELLY=<fernet-key>

# ODIN
ODIN_USER=<username>
ODIN_PASS=<encrypted-value>
ODIN_PASS_SKELLY=<fernet-key>
ODIN_TOKEN=<encrypted-value>
ODIN_TOKEN_SKELLY=<fernet-key>

# Remedy
REMEDY_USER=<username>
REMEDY_PASS=<encrypted-value>
REMEDY_PASS_SKELLY=<fernet-key>

# SNMP
SNMP_COMMUNITY_STRING=<encrypted-value>
SNMP_COMMUNITY_STRING_SKELLY=<fernet-key>
SNMP_PUBLIC_STRING=<encrypted-value>
SNMP_PUBLIC_STRING_SKELLY=<fernet-key>

# SENSE
SENSE_SWAGGER_USER=<username>
SENSE_SWAGGER_PASS=<encrypted-value>
SENSE_SWAGGER_PASS_SKELLY=<fernet-key>
SENSE_EMAIL_NAME=<email>
SENSE_EMAIL_PASS=<encrypted-value>
SENSE_EMAIL_PASS_SKELLY=<fernet-key>
SENSE_TEST_SWAGGER_USER=<username>
SENSE_TEST_SWAGGER_PASS=<encrypted-value>
SENSE_TEST_SWAGGER_PASS_SKELLY=<fernet-key>

# Network Access
TACACS_USER=<username>
TACACS_PASS=<encrypted-value>
TACACS_PASS_SKELLY=<fernet-key>

# Salesforce
SALESFORCE_EMAIL=<email>
SALESFORCE_PASS=<encrypted-value>
SALESFORCE_PASS_SKELLY=<fernet-key>
SALESFORCE_TOKEN=<encrypted-value>
SALESFORCE_TOKEN_SKELLY=<fernet-key>

# ESET
ESET_USER=<username>
ESET_PASS=<encrypted-value>
ESET_PASS_SKELLY=<fernet-key>

# ISE (Identity Services Engine) - Multiple vendor keys
ISE_USER=<username>
ISE_PASS=<encrypted-value>
ISE_PASS_SKELLY=<fernet-key>
ISE_STATIC_KEY=<encrypted-value>
ISE_STATIC_KEY_SKELLY=<fernet-key>
